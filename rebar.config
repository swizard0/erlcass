{pre_hooks, [{"(linux|darwin)", compile, "make nif_compile CPP_DRIVER_REV=a57e5d289d1ea500ccd958de6b75a5b4e0519377"}]}.
{post_hooks, [{"(linux|darwin)", clean, "make nif_clean"}]}.

{deps, [
    {lager, ".*", {git, "https://github.com/erlang-lager/lager.git", {tag, "3.2.4"}}}
]}.

{
    erl_opts,
    [
        warnings_as_errors ,
        warn_export_all,
        {parse_transform, lager_transform},
        nowarn_deprecated_function
    ]
}.
